<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.epidemic_info"
    android:background="@color/settingBackGround">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/a6xxxhdpi_95" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a6xxxhdpi_107"
                android:background="@color/transparent"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="疫情資訊"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:clipChildren="false"
            android:layout_marginTop="25dp"
            android:layout_gravity="center">
        </androidx.viewpager2.widget.ViewPager2>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/viewPager"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/dot1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="360dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginRight="5dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/dot2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="360dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_marginRight="5dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/dot3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="360dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_marginRight="5dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/dot4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="360dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_marginRight="5dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/dot5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:cardCornerRadius="360dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/newsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="left"
        android:maxEms="20"
        android:text="12345678901234567890123456789012345678901234567890123456789012345678901234567890123456789012345678901234567"
        android:layout_gravity="center"/>


</LinearLayout>