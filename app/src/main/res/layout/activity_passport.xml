                android:id="@+id/btn_edt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/textColor"
                android:text="編輯第三劑"/>
