<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutClick"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/registerColor"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@color/white"
    tools:context=".Activities.RegisterScreen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="30dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/a6xxxhdpi_107"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="註  冊"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/a6xxxhdpi_97"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/edt_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:cursorVisible="true"
                        android:hint="請輸入姓名..."
                        android:textColor="@color/deepBlue"
                        android:theme="@style/EditTextThemeNoLine" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_height="50dp">
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/switch_track_all"
                    android:thumb="@drawable/switch_thumb_all"
                    android:textColor="@color/black"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="男"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="女"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a6xxxhdpi_105"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/edt_tel"
                    android:theme="@style/EditTextThemeNoLine"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:hint="請輸入電話..."
                    android:textColor="@color/deepBlue"
                    android:cursorVisible="true"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a6xxxhdpi_97"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/edt_id"
                    android:theme="@style/EditTextThemeNoLine"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:hint="請輸入身分證..."
                    android:maxLines="1"
                    android:textColor="@color/deepBlue"
                    android:cursorVisible="true"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a6xxxhdpi_97"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/edt_cardId"
                    android:theme="@style/EditTextThemeNoLine"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:hint="請輸入健保卡號..."
                    android:textColor="@color/deepBlue"
                    android:cursorVisible="true"
                    android:layout_gravity="center"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a6xxxhdpi_111"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/edt_email"
                    android:theme="@style/EditTextThemeNoLine"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:hint="請輸入信箱..."
                    android:textColor="@color/deepBlue"
                    android:cursorVisible="true"
                    android:layout_height="50dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/spr_city"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <Spinner
                        android:id="@+id/spr_country"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:textAlignment="center"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_address"
                    android:theme="@style/EditTextThemeNoLine"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:hint="請輸入地址..."
                    android:textColor="@color/deepBlue"
                    android:cursorVisible="true"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a6xxxhdpi_103"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/edt_pwd1"
                    android:theme="@style/EditTextThemeNoLine"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:hint="請輸入8~15含英文密碼"
                    android:inputType="textPassword"
                    android:textColor="@color/deepBlue"
                    android:cursorVisible="true"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/a6xxxhdpi_110"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:layout_height="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/a6xxxhdpi_103"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/edt_pwd2"
                    android:theme="@style/EditTextThemeNoLine"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:hint="再次輸入密碼"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:textColor="@color/deepBlue"
                    android:cursorVisible="true"
                    android:layout_gravity="center"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/confirn_button_bac"
            android:text="註冊"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightBlue"
                android:text="已經有帳號了嗎？"/>
            <TextView
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登入"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>




</ScrollView>